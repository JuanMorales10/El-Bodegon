<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

  <% const productsByCategory={}; %>

<% products.forEach(producto=> { %>
<% const category=producto.category; %>
<% if (!productsByCategory[category]) { %>
<% productsByCategory[category]=[]; %>
<% } %>
<% productsByCategory[category].push(producto); %>
<% }) %>
                  <body>
                    <header><%- include("../partials/navbar") %></header>
                    <main>
                      <section>
                        <h3>Nuestros productos</h3>
                        <div class="contenedor-lista">
                          <ul class="product-list">
                            <li><a href="#milanesas">Milanesas</a></li>
                            <li><a href="#carnes">Carnes</a></li>
                            <li><a href="#pescados">Pescados</a></li>
                            <li><a href="#ensaladas">Ensaladas</a></li>
                            <li><a href="#bebidas">Bebidas</a></li>
                            <li><a href="#postres">Postres</a></li>
                          </ul>
                        </div>
                      </section>
                     <div class="men">
                      <% for (const category in productsByCategory) { %>
                        <section>
                        <div class="contenedor-productos">
                          <h2>
                            <%= category %>
                          </h2>
                          <% productsByCategory[category].forEach(producto=> { %>
                            <article class="productos">
                              <img src="/img/<%= producto.image %>" alt="imagen-del-producto" />
                              <div class="info-produ">
                                <a href="/producto/<%= producto.id %>">
                                  <h5>
                                    <%= producto.name %>
                                  </h5>
                                </a>
                                <div class="precio-boton">
                                  <p id="precio">$<%= producto.price %>
                                  </p>
                                  <button class="agregar-al-carrito">Agregar al carrito</button>
                                </div>
                              </div>
                            </article>
                            <% }) %>
                          </div>
                        </section>
                              <% } %>
                            </div>
                    </main>
                    <%- include("../partials/footer") %>
                  </body>
</html>