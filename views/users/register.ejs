<!DOCTYPE html>
<html>
<%- include("../partials/head")  %>
<body>
  <main>
    <div class="contenedor-fuera">
      <a href="/"><button class="botonX">X</button></a>
      <div class="contenedor">
        <form action = "/users/register"  method="POST"   class="login-form" enctype="multipart/form-data">
          <div class="header">
            <div class="signup-login-box">
              <div class="login">
                <a href="/users/login">
                  <h2>Login</h2>
                </a>
              </div>
              <div class="signup">
                <a href="/users/register">
                  <h2>Sign Up</h2>
                </a>
              </div>
            </div>
            <a href="/">
              <h3 class="bodegon">El Bodegon</h3>
            </a>
          </div>
          <div class="form-contenido">
            <div class="input-group">
              <label for="username">Username:</label>
              <input type="text" id="username" name="username" required />
            </div>
            <div class="input-group">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" required />
            </div>
            <div class="input-group">
              <label for="file">Select profile image:</label>
              <input type="file" id="file" name="avatar" />
            </div>
            <div class="input-group">
              <label for="password">Create Password:</label>
              <input type="password" id="password" name="password" required />
            </div>
            <!-- <div class="input-group">
              <label for="confirm-password">Repeat Password:</label>
              <input type="password" id="confirm-password" name="confirm-password" required />
            </div> -->
            <p class="olvidar-password">
              <a href="#">Olvidé mi contraseña</a>
            </p>
            <div class="buttons">
              <input type="submit" value="Registrarse" id="inciar-sesion" />
              <button class="google-button">Google</button>
              <button class="facebook-button">Facebook</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>

</html>